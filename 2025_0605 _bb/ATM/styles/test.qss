/* test.qss */

QWidget {
    background-color: #f0f0f0;
}

QLabel {
    font: 20pt "Microsoft YaHei UI";
    color: #222222;
    qproperty-alignment: 'AlignHCenter | AlignVCenter'; /* ⬅️ 加這行 */
}

QPushButton {
    font: 13pt "Microsoft YaHei UI";
    border: 3px solid black;
    border-radius: 10px;
    background-color: #dcdcdc;
    color: #111111;
    padding: 6px 12px;
}

QLineEdit {
    font: 12pt "Microsoft YaHei UI";
    border: 2px solid #888888;
    border-radius: 6px;
    padding: 4px;
    background-color: #f9f9f9;
    color: #111111;
}

/* QMessageBox 樣式 */
QMessageBox {
    background-color: #f5f5f5; /* 淺灰白底 */
    border: 2px solid #888888;
    border-radius: 10px;
}

QMessageBox QLabel {
    font: 13pt "Microsoft YaHei UI";
    color: #ff0000; /* 紅字 */
    qproperty-alignment: 'AlignHCenter | AlignVCenter'; /* 訊息文字置中 */
}

QMessageBox QPushButton {
    min-width: 80px;
    padding: 6px 10px;
    font: 12pt "Microsoft YaHei UI";
    background-color: #e0e0e0;
    border: 2px solid #666666;
    border-radius: 8px;
    color: #222222;
}

QMessageBox QPushButton:hover {
    background-color: #d0d0d0; /* 懸停略暗 */
}
